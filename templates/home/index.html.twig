	<style>
		/* Cards */
		.allcard {
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: center;
		}
		.card {
			box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
			border-radius: 15px;
			width: 220px;
			overflow: hidden;
			margin-right: 2%;
			margin-bottom: 2%;
		}
		.card:hover .drop-down-window {
			transform: translateX(0);
			opacity: 1;
		}
		.card:hover .img {
			filter: blur(1.5px);
			transform: scale(1);
		}
		.card .img-cont {
			overflow: hidden;
			position: relative;
			clip-path: polygon(0 0, 100% 0, 100% 100%, 0 90%);
		}
		.card .img-cont span {
			position: absolute;
			top: 0;
			right: 0;
			left: 0;
			bottom: 0;
			z-index: 3;
			background-color: rgba(0, 0, 0, 0.2);
			display: flex;
			justify-content: center;
			align-items: center;
			color: white;
			font-weight: light;
			font-size: 30px;
			opacity: 0;
			transform: translatey(-100%);
			transition: transform 0.3s ease-out, opacity 0.5s ease-out;
			font-family: sans-serif;
			clip-path: polygon(0 0, 100% 0, 100% 100%, 0 90%);
		}
		.card .img-cont img {
			z-index: 0;
			width: 100%;
			transform: scale(1.2);
			transition: all 0.3s;
		}
		.card .content-cont {
			padding: 20px;
		}
		.card .content-cont span {
			display: block;
		}
		.card .content-cont .card-header {
			text-transform: uppercase;
			font-weight: bold;
			padding-bottom: 10px;
			font-size: 15px;
		}
		.card .content-cont .card-body {
			font-family: sans-serif;
		}

		.text-center {
			margin-bottom: 3% !important;
		}
		h5 {
			font-size: 1em !important;
		}
		h2 {
			font-size: 1em !important;
		}

		.form-control {
			background: #f5f6f6 !important;
		}


		@media(max-width: 800px) {
			.card {
				width: 150px;
			}
			.card-header {
				font-size: 10px !important;
			}
			h2.text-right,
			h2 {
				text-align: center !important;
			}
		}
	</style>

