	<!-- Formations -->

	<div class="allcard mt-5">
		{% for formation in formations | slice(0,4) %}
			<div class='card'>
				<div class='img-cont'>
					<span class='drop-down-window'>{{ (formation.prix)|number_format(2, ',','.') }}
						€</span>
					{% if formation.image != '' %}
					<img class='img' src="/uploads/{{ formation.image }}">
					{% else %}
					<img class="img" src="{{ asset('img/nopic.png') }}" alt="...">
					{% endif %}
				</div>
				<div class='content-cont'>
					<a style="color: black !important;" href="{{ path('formation', { 'id' : formation.id}) }}">
