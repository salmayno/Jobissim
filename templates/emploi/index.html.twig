{% extends 'base.html.twig' %}

{% block title %}Emplois
{% endblock %}
{% block carousel %}{% endblock %}
{% block filtres %}{% endblock %}
{% block body %}

	<style>
		.text-muted,
		h5.card-title {
			text-transform: uppercase !important;
		}
		.btn.btn-primary.ml-1 {
			background: white !important;
			color: black;
		}
		.form-control {
			background: #f5f6f6 !important;
		}
		h5 {
			font-size: 13px;
		}
	</style>


	<!-- FILTRES -->
	<form class="filtres" action="{{ path('emplois') }}" method="POST" id="search">
		<div class="fil">
			<button class="btn btn-primary" style="height: 50px;" type="submit">EMPLOIS</button>
			<input class="form-control" style="height: 50px;" placeholder="Rechercher" name="search" type="search">
		</div>

		<div class="logs">
			<div class="fil mr-0">
				<button class="btn btn-primary" style="height: 50px;" type="submit">LIEU</button>
				<input class="form-control" style="height: 50px;" placeholder="Rechercher" type="search" name="search2">
			</div>

			<div class="fil2">
				<button type="submit" class="btn btn-primary" style="height: 50px; width: 50px;">
					<i style="font-size: 20px" class="fas fa-search"></i>
				</button>
			</div>
		</div>

	</form>


	<!-- FILTRES AVANCES -->

	{{ form_start(form, {attr: {class: 'filter'}}) }}

	<div class="filtrecol" style="max-width: 180px !important">
		<div class="row">
			<div class="col-md-6">
				{{ form_row(form.min) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.max) }}
			</div>
		</div>
		<div id="price-slider" data-min="{{ min }}" data-max="{{ max }}" style=""></div>
	</div>

	<div class="filtrecol mt-3">
		{{ form_row(form.date) }}
	</div>

	<div class="filtrecol mt-4">
		{{ form_row(form.contrat) }}
	</div>

	<div style="display: none !important;">
		<h5>ÉLIGIBLE</h5>
		{{ form_row(form.eligible) }}
		{{ form_row(form.disponible) }}
	</div>

	<button type="submit" class="btn btn-primary mt-4 mb-2" style="height: 30px; width: 30px;">
		<i style="font-size: 20px" class="fas fa-search"></i>
	</button>

	{{ form_end(form) }}

	{% for emploi in emplois %}

		<!-- CARDS -->

		<div class="card mb-5" style="max-width: 1200px;">
			<div class="row" style="flex-wrap: nowrap;">
				<div class="">
				{% if emploi.image != '' %}
					<a href="{{ path('emploi', { 'id' : emploi.id}) }}"><img class="navimg" src="/uploads/{{ emploi.image }}" alt="..."></a>
					{% else %}
					<a href="{{ path('emploi', { 'id' : emploi.id}) }}"><img class="navimg" src="{{ asset('img/nopic.png') }}" alt="..."></a>
				{% endif %}
				</div>
				<div class="card-body">
					<div class="card1">
						<a href="{{ path('emploi', { 'id' : emploi.id}) }}">
							<h5 style="color: black;" class="card-title">{{ emploi.nom }}</h5>
						</a>
						<p class="card-text">{{ emploi.date|date("d/m/Y") }}</p>
						<p class="card-text">
							<small class="text-muted">{{ emploi.lieu }}</small>
						</p>
					</div>

					<div class="card1">
						<h5 class="card-title">
							<a href="{{ path('emploi_like', {'id': emploi.id}) }}" class="btn btn-link js-like">
								{% if app.user and emploi.isLikeByUser(app.user) %}
									<i class="fas fa-heart"></i>
								{% else %}
									<i class="far fa-heart"></i>
								{% endif %}
							</a>
						</h5>
						<p class="card-text">
							<small class="text-muted">{{ (emploi.salaire)|number_format(2, ',','.') }}
								€ /{{ (emploi.hm) }}</small>
						</p>
					</div>
				</div>
			</div>
		</div>


	{% endfor %}

	<!-- Pagination -->
	<div class="" style="display: flex; justify-content: center;">
		{{ knp_pagination_render(emplois) }}
	</div>

	<!-- /END -->

{% endblock %}
