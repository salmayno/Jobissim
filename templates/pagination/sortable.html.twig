<a{% for attr, value  in options | merge({class: 'btn btn-primary', style: 'height: 35px; width: 50px; font-weight: normal; font-size: 14px;' }) %} {{ attr }}="{{ value }}"{% endfor %}>
<span class="float-right">
        {% if app.request.get('sort') == key %}
          {% if app.request.get('direction') == 'desc' %}
            <i class="fa fa-sort-down" ></i>
            {% else %}
            <i class="fa fa-sort-up" ></i>
          {% endif %}
        {% else %}
          <i class="fa fa-sort"></i>
        {% endif %}
    </span>
{{ title }}
</a>
